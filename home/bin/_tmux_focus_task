#!/usr/bin/env ruby
require 'json'

def tasks(json)
  return [] if json =~ /No matches/

  json.each_line.map do |l| 
    l = l.sub /,?\n$/, ''
    JSON.parse(l) 
  end
end

active = tasks(`task export`).select { |t| t["start"] && !t["end"] }
puts active.map { |t| "#{t["id"]}: #{t["description"]}" }.join(", ")
